'use strict';

/* App Module */

angular.module('task', ['taskFilters']).
  config(['$routeProvider', function($routeProvider) {
    $routeProvider.
    when('/tasks', {templateUrl: '<%= asset_path('templates/task-list.html') %>',   controller: TasksCtrl}).
    when('/tasks/:id', {templateUrl: '<%= asset_path('templates/task-detail.html') %>', controller: TaskDetailCtrl}).
    otherwise({redirectTo: '/tasks'});
  }]);
